@model ScoutingPay.Models.PaymentRequestCreateViewmodel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>@Model.Request.Person.BonNr - @Model.Request.Person.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach(var productItem in Model.ProductOverview)
            {
                <div class="form-group">
                    <label class="control-label">@productItem.ProductName</label>
                    <input asp-for="@productItem" value="0" class="form-control" onload="this.select()"/>
                    <span asp-validation-for="@productItem" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input value="@Model.PersonIndex" type="hidden"/>
            </div>
            <div class="form-group row">
                <input type="submit" asp-action="Skip" value="Skip" class="btn btn-secondary col m-2" />
                <input type="submit" asp-action="Next" value="Next" class="btn btn-primary col m-2" />

            </div>
            <div class="form-group">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}